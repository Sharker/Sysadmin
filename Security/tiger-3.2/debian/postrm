#! /bin/sh
# postrm script for tiger
#
# see: dh_installdeb(1)

set -e

case "$1" in
	purge)
		for dir in /var/log/tiger/ /var/run/tiger/work/ /var/run/tiger/ 
		do
			[ -d "$dir" ] &&  {
			 	find $dir -type f -exec rm -f {} \;
				rmdir $dir
			}
		done
# Do we have any tigerXX files under /var/log/? if so we should remove
# them. This were created due to bug #164682 ...
		find /var/log/ -type f -name "tiger*" | xargs rm -f

	;;
	remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
# Do nothing 
	;;

	*)
	echo "postrm called with unknown argument \`$1'" >&2
	exit 0
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#
