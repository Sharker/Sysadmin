LOCAL_ONLY=$1
CHKRO=$2

ronly()
{
  RO=1
  case "$1" in
    *,ro,*|ro,*|ro|*,ro) RO=0
      ;;
  esac
  return $RO
}

localfs()
{
  LOCAL=1
  [ "$1" = "ufs" ] && LOCAL=0

  return $LOCAL
}

/bin/cat /etc/mnttab |
while read fs mtpoint fstype opts time
do
  PRINT=1
  [ "$CHKRO" = "rw" ] && { ronly "$opts" && PRINT=0; }
  [ "$LOCAL_ONLY" = "local" ] && { localfs "$fstype" || PRINT=0; }
  [ "$PRINT" = "1" ] && echo "$mtpoint $fstype $fs"
done

